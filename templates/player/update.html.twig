<table>
    <tr>
        <td>id</td>
        <td>pv</td>
        <td>name</td>
        <td>mana</td>
        <td>ap</td>
        <td>ad</td>
    </tr>
    {% for player in players %}
        <tr>
            <td>{{player.id}}</td>
            <td>{{player.pv}}</td>
            <td>{{player.name}}</td>
            <td>{{player.mana}}</td>
            <td>{{player.ap}}</td>
            <td>{{player.ad}}</td>
            <td><form action="http://127.0.0.1:8000/player/delete/{{player.id}}" method="post">
                    <input type="submit" value="Supprimer">
                </form></td>
        </tr>
    {% endfor %}
</table>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
</style>